#!/bin/bash

say=0

while [ $# -gt 0 ]; do
  case "$1" in
  -s|--say)
    say=1
    ;;
  -*)
    echo "Unknown option flag: $1"
    exit 1
    ;;
  *)
    station=$(echo -n "$1" | tr "a-z" "A-Z")
    ;;
  esac
  shift
done
json=$(curl -s "https://avwx.rest/api/metar/${station:-KBOS}?options=speech")
if [ $say -gt 0 ]; then
  echo "$json" | /usr/local/bin/jq --raw-output '.Speech' 2>&1 | say
else
  echo "$json" | /usr/local/bin/jq --raw-output '.["Raw-Report"]' 2>&1
fi

